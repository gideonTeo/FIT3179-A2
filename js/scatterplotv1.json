{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Scatter Plot of Global Terrorism Statistics by Continent and Year.",
  "data": {"url": "https://raw.githubusercontent.com/gideonTeo/FIT3179-A2/main/data/fatal.csv"},
  "width": 800,
  "height": 500,
  "layer": [
    {
      "transform": [
        {"filter": {"field": "Country", "equal": "Afghanistan"}},
        {"filter": {"param": "Year"}}
      ],
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 420,
        "y": 250,
        "opacity": 0.06
      },
      "encoding": {"text": {"field": "Year"}}
    },
    {
      "transform": [
        {
          "lookup": "cluster",
          "from": {
            "key": "id",
            "fields": ["name"],
            "data": {
              "values": [
                {"id": 0, "name": "Africa"},
                {"id": 1, "name": "Americas"},
                {"id": 2, "name": "Asia"},
                {"id": 3, "name": "Europe"},
                {"id": 4, "name": "Oceania"}
              ]
            }
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Success Attack",
          "type": "quantitative",
          "scale": {"domain": [0, 4000]},
          "axis": {"tickCount": 5, "title": "Successful Attack"}
        },
        "y": {
          "field": "Total No. of Fatalities",
          "type": "quantitative",
          "scale": {"domain": [0, 4000]},
          "axis": {"tickCount": 5, "title": "Fatalities"}
        }
      }
    }
  ]
}
