{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Fatality rate from 2007 - 2017",
    "data": {
      "url": "https://raw.githubusercontent.com/gideonTeo/FIT3179-A2/main/data/fatal.csv"
    },
    "params": [
      {
        "name": "Year_above",
        "value": 2007,
        "bind": {
          "input": "range",
          "min": 2007,
          "max": 2017,
          "step": 1,
          "name": "Year: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null, 
            "Africa", 
            "Americas", 
            "Asia", 
            "Europe", 
            "Oceania"
          ],
          "labels":[
            "Show All",
            "Africa", 
            "Americas", 
            "Asia", 
            "Europe", 
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Cases <= 300"},
      {"filter": "datum.Fatalities <= 300"},
      {"filter": "datum.Year == Year_above"},
      {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
    ],
    "encoding": {
      "x": {
        "field": "Cases", 
        "type": "quantitative",
        "title": "Terrorism Cases",
        "axis": {"tickCount": 5, "grid": false},
        "scale": {"domain": [0, 300]}
      },
      "y": {
        "field": "Fatalities",
        "type": "quantitative",
        "axis": {"tickCount": 5,  "grid": false},
        "scale": {"domain": [0, 300]}
      }
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
          }
        },
        "mark": {"type": "circle", "size": 100}, 
        "encoding": {
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "Africa", 
                "Americas", 
                "Asia", 
                "Europe", 
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8"
              ]
            }
          },
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.6},
            "value": 0.2
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Fatalities", "type": "quantitative", "format": ","},
            {"field": "Cases", "type": "quantitative", "format": ","},
            {"field": "Year", "type": "quantitative"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        }
      }
    ],
    "config": {"background":"#fff5e8"}
  }