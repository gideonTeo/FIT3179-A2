
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text": "Global Terrorism from 2007-2017", "anchor": "middle"},
    "data": {
      "url": "https://raw.githubusercontent.com/gideonTeo/FIT3179-A2/main/data/att_type.csv"
    },
    "vconcat": [
      {
        "encoding": {
          "color": {
            "condition": {
              "selection": "brush",
              "title": "Attack Type",
              "field": "Attack Type",
              "type": "nominal",
              "scale": {
                "domain": [
                  "Armed Assault",
                  "Assassination",
                  "Bombing/Explosion",
                  "Facility/Infrastructure Attack",
                  "Hijacking",
                  "Hostage Taking (Barricade Incident)",
                  "Hostage Taking (Kidnapping)",
                  "Unarmed Assault",
                  "Unknown"
                ],
                "scheme": "tableau10"
              }
            },
            "value": "lightgray"
          },
          "x": {
            "scale": {"padding": 0.2},
            "field": "Year",
            "axis": {"title": "Year", "labelAngle": 0}
          },
          "y": {
            "aggregate": "sum",
            "title": "Total Attack",
            "field": "Total Attack",
            "format": ",",
            "axis": {"grid": false}
          }
        },
        "width": 360,
        "height": 300,
        "mark": {"type": "bar", "tooltip": true},
        "selection": {"brush": {"encodings": ["x"], "type": "interval"}},
        "transform": [{"filter": {"selection": "click"}}]
      },
      {
        "layer":[
        {
          "encoding": {
            "color": {
              "condition": {
                "selection": "click",
                "field": "Attack Type",
                "scale": {
                  "domain": [
                    "Armed Assault",
                    "Assassination",
                    "Bombing/Explosion",
                    "Facility/Infrastructure Attack",
                    "Hijacking",
                    "Hostage Taking (Barricade Incident)",
                    "Hostage Taking (Kidnapping)",
                    "Unarmed Assault",
                    "Unknown"
                  ],
                  "scheme": "tableau10"
                }
              },
              "value": "lightgray"
            },
            "x": {
              "aggregate": "sum",
              "field": "Total Attack",
              "title": "Number of Attack",
              "format": ",",
              "axis": {"grid": false}
            },
            "y": {"title": "Attack Type", 
             "sort": "-x", "field": "Attack Type"}
          },
          "width": 360,
          "mark": {"type": "bar", "tooltip": true},
          "selection": {"click": {"encodings": ["color"], "type": "multi"}},
