{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 400,
    "title": {
      "text": "Average Fatalities for Each Type of Attack",
      "anchor":"middle",
      "fontSize":20
    },

    "data": {
      "url": "https://raw.githubusercontent.com/gideonTeo/FIT3179-A2/main/data/attack_fatal_2.0.csv"
    },
    
    "transform": [
      {
        "aggregate": [
          {"op": "average", "field": "Fatalities", "as": "Fatalities"}
        ],
        "groupby": ["Attack Type"]
      },

      {
        "joinaggregate": [{
          "op": "average",
          "field": "Fatalities",
          "as": "Iraq Terrorism Fatalities"
        }]
      },
       {
        "window": [{
          "op": "rank",
          "as": "rank"
        }],
        "sort": [{ "field": "Fatalities", "order": "descending" }]
      }
    ],
    "layer":[
      {
      "mark": {"type": "bar", "tooltip": true},
      "encoding": {
        "y": {
          "field": "Attack Type",
          "type": "nominal",
          "title": "Attack Type",
          "sort": "-x"
        },
        "x": {"field": "Fatalities", "type": "quantitative", "format": ","},
        "color":{
          "condition": [{"test": "datum['rank'] == 1", "value": "#cc4c02"}],
          "value": "#fecd68"
          }
        }
      }
      ],
    "config": {"background":"#fff5e8"}
  }
  