{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 400,
    "title": {
      "text": "Top 10 Global Terrorism Ranking (2007 - 2017)",
      "anchor":"middle",
      "fontSize":20
    },

    "data": {
      "url": "https://raw.githubusercontent.com/gideonTeo/FIT3179-A2/main/data/continent.csv"
    },

    "params": [
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null, 
            "Africa", 
            "Americas", 
            "Asia", 
            "Europe", 
            "Oceania"
          ],
          "labels": [
            "Show All",
            "Africa",
            "Americas",
            "Asia",
            "Europe",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    
    "transform": [
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      },

      {
        "aggregate": [
          {"op": "sum", "field": "Cases", "as": "Cases"}
        ],
        "groupby": ["Country"]
      },

      {
        "joinaggregate": [{
          "op": "sum",
          "field": "Cases",
          "as": "Global Terrorism Cases"
        }]
      },
       {
        "window": [{
          "op": "rank",
          "as": "rank"
        }],
        "sort": [{ "field": "Cases", "order": "descending" }]
      }, {
        "filter": "datum.rank <= 10"}
    ],
    "layer":[
      {
      "mark": {"type": "bar", "tooltip": true},
      "encoding": {
        "y": {
          "field": "Country",
          "type": "nominal",
          "title": "Country",
          "sort": "-x"
        },
        "x": {"field": "Cases", "type": "quantitative"},
        "color":{
          "condition": [{"test": "datum['rank'] == 1", "value": "#cc4c02"}],
          "value": "#fecd68"
          }
        }
      }
      ],
    "config": {"background":"#fff5e8"}
  }
  