{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Total Terrorism Cases across Countries from 2007 - 2017",
      "anchor":"middle",
      "fontSize":20
      },
    "width": 650,
    "height": 400,
    "projection": {"type": "equirectangular"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/gideonTeo/FIT3179-A2/main/js/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "darkgrey"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/gideonTeo/FIT3179-A2/main/js/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/gideonTeo/FIT3179-A2/main/data/sum.csv"
              },
              "key": "Country",
              "fields": ["Cases"]
            }
          }
        ],
        "layer": [
          {
            "mark": {"type": "geoshape"},
            "encoding": {
              "color": {
                "field": "Cases",
                "type": "quantitative",
                "title": "Total Terrorism Cases",
                "scale": {
                  "type": "threshold",
                  "domain": [20, 50, 100, 200, 500, 5000, 10000, 22000],
                  "range": ["#ffffcc", "#ffeda0", "#fed976", "#feb24c", "#fd8d3c", "#fc4e2a", "#e31a1c", "#bd0026", "#800026"]
                }
              },
              "tooltip": [
                {
                  "field": "properties.NAME",
                  "type": "nominal",
                  "title": "Country"
                },
                {
                  "field": "Cases",
                  "type": "quantitative",
                  "title": "Total Terrorism Cases",
                  "format": ","
                }
              ]
            }
          }
        ]
      },
      {
        "data": {"values": [{}]},
        "encoding": {"latitude": {"datum": -43}, "longitude": {"datum": -175}},
        "layer": [
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "top",
              "dx": 0,
              "dy": 0,
              "x": "width",
              "text": "Grey",
              "color": "#999999",
              "fontSize": 15,
              "fontStyle": "bold"
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "top",
              "dx": 37,
              "dy": 0,
              "x": "width",
              "text": "coloured countries ",
              "fontSize": 15,
              "fontStyle": "bold"
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "top",
              "dx": 0,
              "dy": 15,
              "x": "width",
              "text": "do not have data due to ",
              "fontSize": 15,
              "fontStyle": "bold"
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "top",
              "dx": 0,
              "dy": 30,
              "x": "width",
              "text": "dataset limitations.",
              "fontSize": 15,
              "fontStyle": "bold"
            }
          }
        ]
      }
    ],
    "config": {"background":"#fff5e8"}
  }
  